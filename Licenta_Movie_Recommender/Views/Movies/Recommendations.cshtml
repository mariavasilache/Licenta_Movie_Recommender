@model List<Licenta_Movie_Recommender.Models.Movie>

@{
    ViewData["Title"] = "Recomandări pentru tine";
}

<div class="container mt-4 mb-5">
    <div class="d-flex align-items-center mb-4 border-bottom border-secondary pb-3">
        <h2 class="text-warning fw-bold mb-0"><i class="bi bi-magic me-2"></i> Recomandări Personalizate</h2>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="alert bg-transparent border border-secondary shadow-sm py-5 text-center rounded-3">
            <i class="bi bi-info-circle display-4 d-block mb-3 text-secondary opacity-50"></i>
            <h4 class="fw-bold text-light">Avem nevoie de mai multe date!</h4>
            <p class="mb-0 text-muted">Algoritmul nostru inteligent are nevoie să evaluezi (cu note de la 1 la 5) <strong>cel puțin 5 filme</strong> pentru a-ți putea crea un profil precis de preferințe.</p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-danger mt-4 px-4 shadow-sm fw-bold"><i class="bi bi-film me-2"></i> Explorează Catalogul</a>
        </div>
    }
    else
    {
        <div class="alert bg-dark border border-success shadow-sm mb-4 rounded-3 d-flex align-items-center p-3">
            <i class="bi bi-check-circle-fill text-success fs-3 me-3"></i>
            <div class="text-light">
                <strong class="text-success">Sistem Hibrid Activ:</strong> Aceste recomandări sunt calculate matematic pe baza filmelor pe care le-ai apreciat, a genurilor tale preferate și a intențiilor din Watchlist.
            </div>
        </div>

        <div class="row">
            @foreach (var movie in Model)
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4 position-relative">

                    
                    <span class="position-absolute badge bg-danger shadow-sm" style="top: 8px; left: 20px; z-index: 5; pointer-events: none;">
                        <i class="bi bi-heart-fill"></i> Pentru tine
                    </span>

                    
                    <partial name="_MovieCard" model="movie" />

                   
                    @if (!string.IsNullOrEmpty(movie.Genres))
                    {
                        <div class="text-center mt-1">
                            <small class="text-muted" style="font-size: 0.75rem;">@movie.Genres.Split('|')[0]</small>
                        </div>
                    }

                </div>
            }
        </div>
    }
</div>