@model Licenta_Movie_Recommender.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<style>
    /* design sistem rating cu stelute */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ddd;
            font-size: 2rem;
            padding: 0 5px;
            cursor: pointer;
            transition: color 0.2s;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107; 
            }
</style>

<div class="container mt-5 mb-5">
    <div class="row bg-white rounded shadow-sm p-4">
        <div class="col-md-4 text-center">
            <img src="@Model.PosterUrl" class="img-fluid rounded shadow" alt="@Model.Title" style="max-height: 500px; object-fit: cover;" onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'" />
        </div>

        <div class="col-md-8 mt-4 mt-md-0">
            <h1 class="display-5 fw-bold mb-2">@Model.Title</h1>

            <p class="text-muted">
                <i class="bi bi-calendar3"></i> Lansare: <strong>@(string.IsNullOrEmpty(ViewBag.ReleaseDate) ? "N/A" : ViewBag.ReleaseDate)</strong> |
                <i class="bi bi-star-fill text-warning"></i> Nota TMDB: <strong>@(ViewBag.TmdbRating > 0 ? ((double)ViewBag.TmdbRating).ToString("0.0") : "N/A")</strong> / 10
            </p>

            <div class="mb-4">
                @if (!string.IsNullOrEmpty(Model.Genres))
                {
                    @foreach (var gen in Model.Genres.Split('|'))
                    {
                        <span class="badge bg-secondary me-1 fs-6 px-3 py-2">@gen</span>
                    }
                }
            </div>

            <h4 class="fw-bold">Sinopsis</h4>
            <p class="lead" style="font-size: 1.1rem; line-height: 1.6;">
                @ViewBag.Overview
            </p>

            <hr class="my-4" />

            <div class="card border-0 bg-light shadow-sm">
                <div class="card-body p-4">
                    @* adaugare watchlist *@
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="row align-items-center">
                            <div class="col-md-6 mb-3 mb-md-0 d-flex gap-2">
                                <form asp-controller="Movies" asp-action="MarkAsWatched" method="post">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success px-4 py-2"><i class="bi bi-check2-circle"></i> Văzut</button>
                                </form>

                                <form asp-controller="Movies" asp-action="AddToWatchlist" method="post">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-primary px-4 py-2"><i class="bi bi-bookmark-plus"></i> Watchlist</button>
                                </form>
                            </div>

                            @* liste custom *@
                            @if (User.Identity.IsAuthenticated)
                            {
                                <div class="mt-4 p-3 bg-light rounded border">
                                    <div class="d-flex justify-content-between align-items-center mb-2">
                                        <h6 class="fw-bold text-muted small mb-0"><i class="bi bi-folder-plus"></i> Adaugă într-o listă</h6>
                                        <button type="button" class="btn btn-link btn-sm p-0 text-decoration-none fw-bold" data-bs-toggle="modal" data-bs-target="#createListFromDetailsModal">
                                            + Listă Nouă
                                        </button>
                                    </div>

                                    @if (ViewBag.UserLists != null && ((List<Licenta_Movie_Recommender.Models.CustomList>)ViewBag.UserLists).Any())
                                    {
                                        <form asp-action="AddMovieToCustomList" method="post" class="d-flex gap-2">
                                            <input type="hidden" name="movieId" value="@Model.Id" />
                                            <select name="customListId" class="form-select form-select-sm" required>
                                                <option value="">Alege lista...</option>
                                                @foreach (var list in ViewBag.UserLists)
                                                {
                                                    <option value="@list.Id">@list.Name</option>
                                                }
                                            </select>
                                            <button type="submit" class="btn btn-success btn-sm">Adaugă</button>
                                        </form>
                                    }
                                    else
                                    {
                                        <p class="small text-muted mb-0">Nu ai creat nicio listă încă. Apasă pe "+ Listă Nouă" pentru a începe.</p>
                                    }
                                </div>
                            }
                             @* rating *@
                            <div class="col-md-6 border-start text-center text-md-start">
                                <h6 class="mb-1 text-muted">Evaluează acest film:</h6>
                                <form asp-controller="Movies" asp-action="SaveRating" method="post" class="d-flex align-items-center justify-content-center justify-content-md-start">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <div class="star-rating me-3">
                                        <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="5 stele - Capodoperă">★</label>
                                        <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="4 stele - Foarte bun">★</label>
                                        <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="3 stele - Bun">★</label>
                                        <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 stele - Slab">★</label>
                                        <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 stea - Oribil">★</label>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-warning fw-bold">Trimite Nota</button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-2">
                            <h5 class="text-muted mb-3"><i class="bi bi-lock"></i> Autentifică-te pentru a salva filme și a acorda note.</h5>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-5">Intră în cont</a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@* --- MODAL PENTRU CREARE LISTA DIRECT DE PE FILM --- *@
<div class="modal fade" id="createListFromDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold text-primary">Creează o listă nouă</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreateCustomList" method="post">
                <input type="hidden" name="sourceMovieId" value="@Model.Id" />

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="listName" class="form-label fw-bold small">Numele listei</label>
                        <input type="text" class="form-control" id="listName" name="name" required maxlength="100">
                    </div>
                    <div class="mb-3">
                        <label for="listDesc" class="form-label fw-bold small">Descriere (opțional)</label>
                        <textarea class="form-control" id="listDesc" name="description" rows="2" maxlength="500"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Anulează</button>
                    <button type="submit" class="btn btn-success px-4">Salvează</button>
                </div>
            </form>
        </div>
    </div>
</div>