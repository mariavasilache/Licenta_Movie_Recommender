<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Movie Recommender</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Licenta_Movie_Recommender.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css">
</head>
<body class="bg-dark text-light">
    <header>
        <nav class="navbar navbar-expand-sm navbar-dark bg-dark border-bottom border-secondary sticky-top mb-3">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold text-danger" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-camera-reels me-1"></i> Movie Recommender
                </a>

                <button class="navbar-toggler border-secondary" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item fw-bold">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Acasă</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Movies" asp-action="Index">Catalog Filme</a>
                        </li>
                    </ul>

                    @* --- FORMULAR SEARCH LIVE --- *@
                    <form class="d-flex position-relative ms-auto" asp-controller="Movies" asp-action="Index" method="get" id="searchForm">
                        <input class="form-control me-2 bg-dark text-light border-secondary" type="search" placeholder="Caută filme..." aria-label="Search" name="searchString" id="searchInput" value="@ViewData["CurrentFilter"]" autocomplete="off">
                        <button class="btn btn-outline-danger" type="submit"><i class="bi bi-search"></i></button>

                        <div id="searchPreviewDropdown" class="dropdown-menu w-100 shadow-lg p-0" style="position: absolute; top: 110%; left: 0; display: none; background-color: #1f1f1f; border: 1px solid rgba(255,255,255,0.1); border-radius: 0.5rem; overflow: hidden; z-index: 1050;">
                            <div id="searchResultsList" class="list-group list-group-flush m-0"></div>
                        </div>
                    </form>

                    @* --- ZONA DE CONT --- *@
                    <ul class="navbar-nav ms-3 align-items-center">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle d-flex align-items-center p-0" href="#" id="profileDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="https://ui-avatars.com/api/?name=@User.Identity.Name&background=dc3545&color=fff&rounded=true" alt="Avatar" width="35" height="35" class="rounded-circle shadow-sm border border-secondary">
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end shadow-lg border-secondary mt-2 bg-dark" aria-labelledby="profileDropdown">
                                    <li><h6 class="dropdown-header text-danger">Salut, @User.Identity.Name!</h6></li>
                                    <li><hr class="dropdown-divider border-secondary"></li>

                                    <li><a class="dropdown-item text-light py-2 custom-dropdown-item" asp-controller="Movies" asp-action="MyProfile"><i class="bi bi-person-badge me-2 text-muted"></i> Profilul Meu</a></li>
                                    <li><hr class="dropdown-divider border-secondary"></li>
                                    <li><a class="dropdown-item text-danger py-2 custom-dropdown-item fw-bold" asp-controller="Account" asp-action="Logout"><i class="bi bi-box-arrow-right me-2"></i> Deconectare</a></li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-controller="Account" asp-action="Login">Intră în cont</a>
                            </li>
                            <li class="nav-item ms-2">
                                <a class="btn btn-sm btn-danger fw-bold shadow-sm" asp-controller="Account" asp-action="Register">Cont Nou</a>
                            </li>
                        }
                    </ul>

                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top border-secondary footer text-muted mt-5 py-3">
        <div class="container text-center small">
            &copy; 2026 - Movie Recommender App
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>