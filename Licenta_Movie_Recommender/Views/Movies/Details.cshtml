@model Licenta_Movie_Recommender.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

@* --- MESAJE DE SUCCES / EROARE --- *@
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show mt-3 shadow-sm" role="alert">
        <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show mt-3 shadow-sm" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
}

<style>
    /* design sistem rating cu stelute */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ddd;
            font-size: 2rem;
            padding: 0 5px;
            cursor: pointer;
            transition: color 0.2s;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107;
            }
</style>

<div class="container mt-5 mb-5">

    <div class="mb-3">
        <a href="javascript:history.back()" class="btn btn-sm btn-outline-secondary shadow-sm px-3 py-2 fw-bold text-decoration-none">
            <i class="bi bi-arrow-left me-1"></i> Înapoi
        </a>
    </div>

    <div class="row bg-white rounded shadow-sm p-4">

        <div class="col-md-4 text-center">
            <img src="@Model.PosterUrl" class="img-fluid rounded shadow" alt="@Model.Title" style="max-height: 500px; object-fit: cover;" onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'" />
        </div>

        <div class="col-md-8 mt-4 mt-md-0">
            <h1 class="display-5 fw-bold mb-2">@Model.Title</h1>

            <p class="text-muted">
                <i class="bi bi-calendar3"></i> Lansare: <strong>@(string.IsNullOrEmpty(ViewBag.ReleaseDate) ? "N/A" : ViewBag.ReleaseDate)</strong> |
                <i class="bi bi-star-fill text-warning"></i> Nota TMDB: <strong>@(ViewBag.TmdbRating > 0 ? ((double)ViewBag.TmdbRating).ToString("0.0") : "N/A")</strong> / 10
            </p>

            <div class="mb-4">
                @if (!string.IsNullOrEmpty(Model.Genres))
                {
                    @foreach (var gen in Model.Genres.Split('|'))
                    {
                        <span class="badge bg-secondary me-1 fs-6 px-3 py-2">@gen</span>
                    }
                }
            </div>

            <h4 class="fw-bold">Sinopsis</h4>
            <p class="lead" style="font-size: 1.1rem; line-height: 1.6;">
                @ViewBag.Overview
            </p>

            <hr class="my-4" />

            <div class="card border-0 bg-light shadow-sm">
                <div class="card-body p-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var rating = ViewBag.UserRating != null ? (int)ViewBag.UserRating : 0;
                        var status = ViewBag.UserStatus != null ? (int)ViewBag.UserStatus : 0;
                        var listsContainingMovie = ViewBag.ListsContainingMovie as List<int> ?? new List<int>();
                        var userLists = ViewBag.UserLists as List<Licenta_Movie_Recommender.Models.CustomList> ?? new List<Licenta_Movie_Recommender.Models.CustomList>();

                        <div class="d-flex align-items-center justify-content-between mb-3 border-bottom pb-3">
                            <form asp-action="SaveRating" method="post" class="m-0 d-flex align-items-center">
                                <input type="hidden" name="movieId" value="@Model.Id" />
                                <div class="star-rating me-3">
                                    @for (int i = 5; i >= 1; i--)
                                    {
                                        <input type="radio" id="star_@i" name="rating" value="@i" @(rating == i ? "checked" : "") onchange="this.form.submit()" />
                                        <label for="star_@i" title="@i stele"><i class="bi bi-star-fill"></i></label>
                                    }
                                </div>
                                @if (rating > 0)
                                {
                                    <span class="badge bg-warning text-dark fs-6 shadow-sm">Nota: @rating</span>
                                }
                            </form>

                            @if (rating > 0)
                            {
                                <form asp-action="RemoveRatingOnly" method="post" class="m-0">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger border-0" title="Șterge doar nota"><i class="bi bi-x-circle fs-5"></i></button>
                                </form>
                            }
                        </div>

                        <div class="d-flex flex-wrap gap-2">

                            @if (status == 2 || rating > 0)
                            {
                                @if (rating > 0)
                                {
                                    <button type="button" class="btn btn-success shadow-sm fw-bold" data-bs-toggle="modal" data-bs-target="#removeWatchedModal">
                                        <i class="bi bi-check-circle-fill"></i> Vizionat
                                    </button>
                                }
                                else
                                {
                                    <form asp-action="RemoveActivityStatus" method="post" class="m-0">
                                        <input type="hidden" name="movieId" value="@Model.Id" />
                                        <button type="submit" class="btn btn-success shadow-sm fw-bold" title="Anulează vizionarea">
                                            <i class="bi bi-check-circle-fill"></i> Vizionat
                                        </button>
                                    </form>
                                }
                            }
                            else
                            {
                                <form asp-action="MarkAsWatched" method="post" class="m-0">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-success shadow-sm"><i class="bi bi-eye"></i> Marchează ca văzut</button>
                                </form>
                            }

                            @if (status == 1)
                            {
                                <form asp-action="RemoveActivityStatus" method="post" class="m-0">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-warning shadow-sm text-dark fw-bold">
                                        <i class="bi bi-bookmark-check-fill"></i> În Watchlist
                                    </button>
                                </form>
                            }
                            else
                            {
                                <form asp-action="AddToWatchlist" method="post" class="m-0">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-warning shadow-sm text-dark"><i class="bi bi-bookmark-plus"></i> Watchlist</button>
                                </form>
                            }

                            <div class="dropdown">
                                <button class="btn btn-outline-secondary shadow-sm dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-folder-plus"></i> Adaugă în listă...
                                </button>
                                <ul class="dropdown-menu shadow-sm" style="min-width: 260px;">
                                    <li>
                                        <button type="button" class="dropdown-item fw-bold text-primary py-2" data-bs-toggle="modal" data-bs-target="#createListFromDetailsModal">
                                            <i class="bi bi-plus-lg me-2"></i> Listă nouă
                                        </button>
                                    </li>
                                    @if (userLists.Any())
                                    {
                                        <li><hr class="dropdown-divider"></li>
                                        @foreach (var list in userLists)
                                        {
                                            var isInList = listsContainingMovie.Contains(list.Id);
                                            <li>
                                                <div class="dropdown-item d-flex justify-content-between align-items-center py-2">
                                                    <span class="text-truncate" style="max-width: 160px; font-size: 0.9rem;">
                                                        @if (isInList)
                                                        {
                                                            <i class="bi bi-check-circle-fill text-success me-1"></i>
                                                        }
                                                        @list.Name
                                                    </span>

                                                    @if (isInList)
                                                    {
                                                        <form asp-action="RemoveMovieFromCustomList" method="post" class="m-0">
                                                            <input type="hidden" name="customListId" value="@list.Id" />
                                                            <input type="hidden" name="movieId" value="@Model.Id" />
                                                            <button type="submit" class="btn btn-sm btn-link text-danger p-0 ms-2" title="Șterge din @list.Name"><i class="bi bi-x-circle-fill fs-5"></i></button>
                                                        </form>
                                                    }
                                                    else
                                                    {
                                                        <form asp-action="AddMovieToCustomList" method="post" class="m-0">
                                                            <input type="hidden" name="customListId" value="@list.Id" />
                                                            <input type="hidden" name="movieId" value="@Model.Id" />
                                                            <button type="submit" class="btn btn-sm btn-link text-success p-0 ms-2" title="Adaugă în @list.Name"><i class="bi bi-plus-circle fs-5"></i></button>
                                                        </form>
                                                    }
                                                </div>
                                            </li>
                                        }
                                    }
                                </ul>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-2">
                            <h5 class="text-muted mb-3"><i class="bi bi-lock"></i> Autentifică-te pentru a salva filme și a acorda note.</h5>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-5">Intră în cont</a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>

@* --- MODAL PENTRU CREARE LISTA DIRECT DE PE FILM --- *@
<div class="modal fade" id="createListFromDetailsModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold text-primary">Creează o listă nouă</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-action="CreateCustomList" method="post">
                <input type="hidden" name="sourceMovieId" value="@Model.Id" />

                <div class="modal-body">
                    <div class="mb-3">
                        <label for="listName" class="form-label fw-bold small">Numele listei</label>
                        <input type="text" class="form-control" id="listName" name="name" required maxlength="100">
                    </div>
                    <div class="mb-3">
                        <label for="listDesc" class="form-label fw-bold small">Descriere (opțional)</label>
                        <textarea class="form-control" id="listDesc" name="description" rows="2" maxlength="500"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Anulează</button>
                    <button type="submit" class="btn btn-success px-4">Salvează</button>
                </div>
            </form>
        </div>
    </div>
</div>

@* --- MODAL STERGERE NOTA --- *@
<div class="modal fade" id="removeWatchedModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content border-0 shadow-lg">
            <div class="modal-header bg-danger text-white border-0">
                <h5 class="modal-title fw-bold"><i class="bi bi-exclamation-triangle-fill me-2"></i> Atenție</h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body py-4">
                <p class="mb-1" style="font-size: 1.1rem;">Dacă anulezi vizionarea acestui film, <strong>se va șterge automat și nota</strong> pe care i-ai acordat-o.</p>
                <p class="text-muted mb-0 mt-2">Ești sigur că vrei să continui?</p>
            </div>
            <div class="modal-footer border-0 bg-light">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Renunță</button>
                <form asp-action="RemoveActivityStatus" method="post" class="m-0">
                    <input type="hidden" name="movieId" value="@Model.Id" />
                    <button type="submit" class="btn btn-danger px-4 fw-bold">Da, șterge tot</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        //doar butoanele de adaugare de pe pagina detalii
        const actionForms = document.querySelectorAll('#action-buttons-container form[action*="AddToWatchlist"], #action-buttons-container form[action*="MarkAsWatched"]');

        actionForms.forEach(form => {
            form.addEventListener('submit', async (e) => {
                e.preventDefault();
                const btn = form.querySelector('button');
                const originalHtml = btn.innerHTML;

                btn.innerHTML = '<span class="spinner-border spinner-border-sm"></span> Se salvează...';
                btn.disabled = true;

                try {
                    await fetch(form.action, { method: 'POST', body: new FormData(form) });

                    // schimbare buton fara refresh
                    if(form.action.includes('AddToWatchlist')) {
                        btn.className = 'btn btn-warning shadow-sm text-dark fw-bold';
                        btn.innerHTML = '<i class="bi bi-bookmark-check-fill"></i> În Watchlist';
                        form.action = '/Movies/RemoveActivityStatus'; //transformare in buton de stergere
                    } else if (form.action.includes('MarkAsWatched')) {
                        btn.className = 'btn btn-success shadow-sm fw-bold';
                        btn.innerHTML = '<i class="bi bi-check-circle-fill"></i> Vizionat';
                        form.action = '/Movies/RemoveActivityStatus';
                    }

                    btn.disabled = false;
                } catch (error) {
                    btn.innerHTML = originalHtml;
                    btn.disabled = false;
                }
            });
        });
    </script>
}