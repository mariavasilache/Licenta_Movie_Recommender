@model IEnumerable<Licenta_Movie_Recommender.Models.Movie>
@inject Licenta_Movie_Recommender.Services.RecommendationService RecService

@{
    ViewData["Title"] = "Catalog Filme";

    var userIdClaim = User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier);
    List<Licenta_Movie_Recommender.Models.Movie> recommendations = new List<Licenta_Movie_Recommender.Models.Movie>();

    if (userIdClaim != null)
    {
        recommendations = await RecService.GetRecommendationsAsync(int.Parse(userIdClaim.Value));
    }
}

<div class="container mt-4">

    @* --- SECTIUNE RECOMANDARI SAU MESAJ UTILIZATOR NOU --- *@
    @if (recommendations != null && recommendations.Any())
    {
        <h3 class="mb-3 text-primary"><i class="bi bi-stars"></i> Recomandate pentru tine</h3>
        <div class="row mb-5">
            @foreach (var film in recommendations)
            {
                <div class="col-md-2 col-sm-4 col-6 mb-3">
                    <a asp-action="Details" asp-route-id="@film.Id">
                        <div class="card h-100 shadow-sm border-0 movie-card">
                            <img src="@film.PosterUrl" class="card-img-top rounded" alt="@film.Title"
                                 onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'">
                        </div>
                    </a>
                </div>
            }
        </div>
        <hr class="mb-5" />
    }
    else if (User.Identity.IsAuthenticated)
    {
        @* --- MESAJ COLD START (DOAR PT LOGATI FARA RECOMANDARI) --- *@
        <div class="alert alert-info shadow-sm border-0 mb-5 d-flex align-items-center" role="alert">
            <i class="bi bi-info-circle-fill fs-3 text-info me-3"></i>
            <div>
                <h5 class="alert-heading mb-1">Ești nou pe aici sau nu ai evaluat destule filme?</h5>
                <p class="mb-0">Pentru a debloca algoritmul de recomandări personalizate, acordă o notă bună (4 sau 5 stele) filmelor pe care le-ai văzut deja din catalogul de mai jos!</p>
            </div>
        </div>
        <hr class="mb-5" />
    }

    @* --- SECTIUNE DESCOPERA (SUGESTII PENTRU TOATA LUMEA) --- *@
    @if (ViewBag.TrendingMovies != null)
    {
        <div class="mb-4">
            <h3 class="mb-1 text-success fw-bold"><i class="bi bi-compass"></i> Descoperă</h3>
            <p class="text-muted fs-6">Nu știi la ce să te uiți? Încearcă una dintre aceste sugestii surpriză extrase din catalogul nostru!</p>
        </div>

        <div class="row mb-5">
            @foreach (var film in ViewBag.TrendingMovies)
            {
                <div class="col-md-2 col-sm-4 col-6 mb-3">
                    <a asp-action="Details" asp-route-id="@film.Id">
                        <div class="card h-100 shadow-sm border-0 movie-card position-relative overflow-hidden">
                            <span class="position-absolute top-0 end-0 badge bg-success m-2 shadow">Sugestie</span>
                            <img src="@film.PosterUrl" class="card-img-top rounded" alt="@film.Title"
                                 style="object-fit: cover; height: 100%;"
                                 onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'">
                        </div>
                    </a>
                </div>
            }
        </div>
        <hr class="mb-5 text-muted" />
    }

    @* --- CATALOGUL GENERAL --- *@
    <h3 class="mb-4">Toate Filmele</h3>
    <div class="row">
        @foreach (var film in Model)
        {
            <div class="col-md-3 mb-4">
                <a asp-controller="Movies" asp-action="Details" asp-route-id="@film.Id" class="text-decoration-none text-dark">
                    <div class="card h-100 shadow-sm border-0 movie-card">
                        <img src="@film.PosterUrl" class="card-img-top" alt="@film.Title"
                             onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'">
                        <div class="card-body">
                            <h6 class="card-title fw-bold">@film.Title</h6>
                            <p class="card-text text-muted small">
                                @(string.IsNullOrEmpty(film.Genres) ? "General" : film.Genres.Replace("|", ", "))
                            </p>
                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

    @* --- NAVIGATIE PAGINATIE --- *@
    <nav aria-label="Page navigation" class="mt-5">
        <ul class="pagination justify-content-center">
            @if (ViewBag.CurrentPage > 1)
            {
                <li class="page-item">
                    <a class="page-link shadow-sm" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage - 1)">« Înapoi</a>
                </li>
            }

            <li class="page-item disabled">
                <span class="page-link bg-light">Pagina @ViewBag.CurrentPage din @ViewBag.TotalPages</span>
            </li>

            @if (ViewBag.CurrentPage < ViewBag.TotalPages)
            {
                <li class="page-item">
                    <a class="page-link shadow-sm" asp-action="Index" asp-route-page="@(ViewBag.CurrentPage + 1)">Înainte »</a>
                </li>
            }
        </ul>
    </nav>
</div>