@model Licenta_Movie_Recommender.Models.ProfileDashboardViewModel

@{
    ViewData["Title"] = "Profilul Meu";
}

<div class="container mt-4 mb-5">

    @* --- MESAJE DE EROARE / SUCCES --- *@
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-exclamation-triangle-fill me-2"></i> @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i> @TempData["Success"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="d-flex align-items-center mb-4 border-bottom pb-2">
        <h2 class="text-primary fw-bold mb-0"><i class="bi bi-person-circle me-2"></i> Dashboard Profil</h2>
    </div>

    @* --- SECTIUNEA 1: STATISTICI --- *@
    <div class="row mb-5">
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-primary text-white h-100 shadow border-0 rounded-3">
                <div class="card-body text-center">
                    <h1 class="display-5 fw-bold mb-0">@Model.TotalWatched</h1>
                    <p class="mb-0 text-white-50 small text-uppercase fw-bold">Filme Văzute</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-info text-white h-100 shadow border-0 rounded-3">
                <div class="card-body text-center">
                    <h1 class="display-5 fw-bold mb-0">@Model.TotalWatchlist</h1>
                    <p class="mb-0 text-white-50 small text-uppercase fw-bold">În Watchlist</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-success text-white h-100 shadow border-0 rounded-3">
                <div class="card-body text-center">
                    <h1 class="display-5 fw-bold mb-0">@Model.AverageRating</h1>
                    <p class="mb-0 text-white-50 small text-uppercase fw-bold">Nota Medie</p>
                </div>
            </div>
        </div>
        <div class="col-md-3 col-6 mb-3">
            <div class="card bg-warning text-dark h-100 shadow border-0 rounded-3">
                <div class="card-body text-center d-flex flex-column justify-content-center">
                    <h4 class="fw-bold mb-0 text-truncate">@Model.FavoriteGenre</h4>
                    <p class="mb-0 text-dark-50 small text-uppercase fw-bold mt-1">Gen Preferat</p>
                </div>
            </div>
        </div>
    </div>

    @* --- SECTIUNEA 2: PREVIEW WATCHLIST --- *@
    <div class="d-flex justify-content-between align-items-center mt-4 mb-3 border-bottom pb-2">
        <h4 class="fw-bold mb-0">Activitate Recentă</h4>
        <a asp-action="WatchHistory" class="btn btn-sm btn-outline-primary">Vezi tot istoricul &raquo;</a>
    </div>

    <h6 class="text-muted fw-bold text-uppercase mb-3" style="font-size: 0.85rem;">Ultimele Filme Văzute</h6>
    <div class="row mb-4">
        @if (!Model.RecentWatched.Any())
        {
            <div class="col-12"><p class="text-muted small">Nu ai niciun film văzut recent.</p></div>
        }
        else
        {
            @foreach (var activity in Model.RecentWatched.Take(6))
            {
                <div class="col-md-2 col-sm-4 col-4 mb-3">
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@activity.MovieId" class="text-decoration-none">
                        <div class="position-relative">
                            <img src="@activity.Movie.PosterUrl" class="img-fluid rounded shadow-sm" alt="@activity.Movie.Title" onerror="this.src='https://placehold.co/200x300?text=Fara+Poster'">
                            @if (activity.Rating > 0)
                            {
                                <span class="position-absolute top-0 end-0 badge bg-warning text-dark m-1 shadow-sm"><i class="bi bi-star-fill"></i> @activity.Rating</span>
                            }
                            else
                            {
                                <span class="position-absolute top-0 end-0 badge bg-success m-1 shadow-sm" title="Vizionat"><i class="bi bi-eye-fill"></i></span>
                            }
                        </div>
                    </a>
                </div>
            }
        }
    </div>

    <h6 class="text-muted fw-bold text-uppercase mb-3 mt-2" style="font-size: 0.85rem;">Adăugate în Watchlist</h6>
    <div class="row mb-4">
        @if (!Model.RecentWatchlist.Any())
        {
            <div class="col-12"><p class="text-muted small">Nu ai niciun film în Watchlist.</p></div>
        }
        else
        {
            @foreach (var activity in Model.RecentWatchlist.Take(6))
            {
                <div class="col-md-2 col-sm-4 col-4 mb-3">
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@activity.MovieId" class="text-decoration-none">
                        <div class="position-relative">
                            <img src="@activity.Movie.PosterUrl" class="img-fluid rounded shadow-sm" alt="@activity.Movie.Title" onerror="this.src='https://placehold.co/200x300?text=Fara+Poster'">
                            <span class="position-absolute top-0 end-0 badge bg-warning text-dark m-1 shadow-sm" title="În Watchlist"><i class="bi bi-bookmark-fill"></i></span>
                        </div>
                    </a>
                </div>
            }
        }
    </div>

    @* --- SECTIUNEA 3: LISTELE TALE --- *@
    <div class="d-flex justify-content-between align-items-center mt-5 mb-3 border-bottom pb-2">
        <h4 class="fw-bold mb-0">Listele Tale </h4>
        <button class="btn btn-success btn-sm shadow-sm" data-bs-toggle="modal" data-bs-target="#createListModal">
            <i class="bi bi-plus-lg"></i> Listă Nouă
        </button>
    </div>

    <div class="row">
        @if (!Model.CustomLists.Any())
        {
            <div class="col-12">
                <div class="alert alert-light border text-center py-4">
                    <p class="text-muted mb-0">Nu ai creat nicio listă personalizată încă. Apasă pe butonul verde pentru a începe!</p>
                </div>
            </div>
        }
        else
        {
            @foreach (var lista in Model.CustomLists)
            {
                <div class="col-md-4 mb-4">
                    <div class="card h-100 shadow-sm border-0 bg-light">
                        <div class="card-body d-flex flex-column">

                            <div class="d-flex mb-3 ps-2 pt-1" style="min-height: 85px;">
                                @if (lista.Movies.Any())
                                {
                                    int zIndex = 10;
                                    @foreach (var item in lista.Movies.OrderByDescending(m => m.AddedAt).Take(4))
                                    {
                                        <img src="@item.Movie.PosterUrl"
                                             class="rounded shadow"
                                             style="width: 55px; height: 80px; object-fit: cover; margin-left: -15px; border: 2px solid #f8f9fa; z-index: @zIndex;"
                                             onerror="this.src='https://placehold.co/55x80?text=Img'" />
                                        zIndex--;
                                    }
                                }
                                else
                                {
                                    <div class="d-flex align-items-center justify-content-center w-100 rounded bg-white border" style="height: 80px; border-style: dashed !important;">
                                        <span class="text-muted small"><i class="bi bi-camera-reels"></i> Listă goală</span>
                                    </div>
                                }
                            </div>

                            <h5 class="card-title fw-bold text-primary mb-1">@lista.Name</h5>
                            <p class="text-muted small mb-2">
                                <i class="bi bi-film"></i> @lista.Movies.Count filme
                                <span class="mx-1">&bull;</span>
                                <i class="bi bi-clock-history"></i> @lista.CreatedAt.ToString("dd MMM yyyy")
                            </p>

                            @if (!string.IsNullOrEmpty(lista.Description))
                            {
                                <p class="card-text small text-muted text-truncate mb-3">@lista.Description</p>
                            }
                            else
                            {
                                <p class="card-text small text-muted fst-italic mb-3">Fără descriere</p>
                            }

                            <div class="d-flex gap-2 mt-auto">
                                <a asp-controller="Movies" asp-action="CustomListDetails" asp-route-id="@lista.Id" class="btn btn-sm btn-outline-secondary flex-grow-1 fw-bold">Deschide</a>

                                <form asp-controller="Movies" asp-action="DeleteCustomList" method="post" class="m-0" onsubmit="return confirm('Sigur vrei să ștergi lista @lista.Name? Acțiunea este ireversibilă!');">
                                    <input type="hidden" name="id" value="@lista.Id" />
                                    <button type="submit" class="btn btn-sm btn-outline-danger" title="Șterge lista"><i class="bi bi-trash"></i></button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>

@* --- FEREASTRA MODAL PENTRU CREARE LISTA --- *@
<div class="modal fade" id="createListModal" tabindex="-1" aria-labelledby="createListModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content border-0 shadow">
            <div class="modal-header bg-light">
                <h5 class="modal-title fw-bold text-primary" id="createListModalLabel">Creează o listă nouă</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <form asp-controller="Movies" asp-action="CreateCustomList" method="post">
                <div class="modal-body">
                    <div class="mb-3">
                        <label for="listName" class="form-label fw-bold small">Numele listei</label>
                        <input type="text" class="form-control" id="listName" name="name" required maxlength="100">
                    </div>
                    <div class="mb-3">
                        <label for="listDesc" class="form-label fw-bold small">Descriere (opțional)</label>
                        <textarea class="form-control" id="listDesc" name="description" rows="2" maxlength="500"></textarea>
                    </div>
                </div>
                <div class="modal-footer border-0">
                    <button type="button" class="btn btn-light" data-bs-dismiss="modal">Anulează</button>
                    <button type="submit" class="btn btn-success px-4">Salvează</button>
                </div>
            </form>
        </div>
    </div>
</div>