@model Licenta_Movie_Recommender.Models.CustomList

@{
    ViewData["Title"] = Model.Name;
}

<div class="container mt-4 mb-5">

    @* --- HEADER LISTA (Adaptat pentru Dark Mode) --- *@
    <div class="bg-transparent border border-secondary p-4 rounded shadow-sm mb-4 d-flex justify-content-between align-items-start flex-wrap gap-3">
        <div>
            <h2 class="text-danger fw-bold mb-2">@Model.Name</h2>
            @if (!string.IsNullOrEmpty(Model.Description))
            {
                <p class="text-light opacity-75 mb-0">@Model.Description</p>
            }
            <div class="mt-3 small text-muted">
                <i class="bi bi-calendar3"></i> Creată pe: @Model.CreatedAt.ToString("dd MMM yyyy") |
                <i class="bi bi-film"></i> @Model.Movies.Count filme
            </div>
        </div>

        @* BUTON STERGERE *@
        <form asp-controller="Movies" asp-action="DeleteCustomList" method="post" class="m-0" onsubmit="return confirm('Sigur vrei să ștergi complet această listă?');">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-outline-danger btn-sm shadow-sm"><i class="bi bi-trash"></i> Șterge Lista</button>
        </form>
    </div>

    @* --- CONTINUT LISTA --- *@
    @if (!Model.Movies.Any())
    {
        <div class="alert bg-dark border border-secondary text-center shadow-sm py-5 rounded-3">
            <i class="bi bi-camera-reels fs-1 d-block mb-3 text-secondary opacity-50"></i>
            <h5 class="fw-bold text-light">Această listă este goală.</h5>
            <p class="text-muted">Poți adăuga filme navigând în catalog și apăsând pe butonul "Adaugă în listă" de pe pagina oricărui film.</p>
            <a asp-action="Index" class="btn btn-danger mt-3 shadow-sm px-4"><i class="bi bi-search me-2"></i> Mergi la Catalog Filme</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.Movies.OrderByDescending(m => m.AddedAt))
            {
                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-4">

                    <partial name="_MovieCard" model="item.Movie" view-data='new ViewDataDictionary(ViewData) { { "ShowButtons", false } }' />

                    
                    <div class="text-center mt-2">
                        <small class="text-muted" style="font-size: 0.75rem;"><i class="bi bi-clock-history"></i> Adăugat: @item.AddedAt.ToString("dd MMM")</small>
                    </div>

                </div>
            }
        </div>
    }

    <div class="mt-4 border-top border-secondary pt-3">
        <a asp-action="MyProfile" class="btn btn-outline-secondary btn-sm">&laquo; Înapoi la Profil</a>
    </div>

</div>