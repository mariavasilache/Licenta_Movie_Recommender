@model Licenta_Movie_Recommender.Models.Movie

@{
    ViewData["Title"] = Model.Title;
}

<style>
    /* design sistem rating cu stelute */
    .star-rating {
        display: flex;
        flex-direction: row-reverse;
        justify-content: flex-end;
    }

        .star-rating input {
            display: none;
        }

        .star-rating label {
            color: #ddd;
            font-size: 2rem;
            padding: 0 5px;
            cursor: pointer;
            transition: color 0.2s;
        }

            .star-rating input:checked ~ label,
            .star-rating label:hover,
            .star-rating label:hover ~ label {
                color: #ffc107; 
            }
</style>

<div class="container mt-5 mb-5">
    <div class="row bg-white rounded shadow-sm p-4">
        <div class="col-md-4 text-center">
            <img src="@Model.PosterUrl" class="img-fluid rounded shadow" alt="@Model.Title" style="max-height: 500px; object-fit: cover;" onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'" />
        </div>

        <div class="col-md-8 mt-4 mt-md-0">
            <h1 class="display-5 fw-bold mb-2">@Model.Title</h1>

            <p class="text-muted">
                <i class="bi bi-calendar3"></i> Lansare: <strong>@(string.IsNullOrEmpty(ViewBag.ReleaseDate) ? "N/A" : ViewBag.ReleaseDate)</strong> |
                <i class="bi bi-star-fill text-warning"></i> Nota TMDB: <strong>@(ViewBag.TmdbRating > 0 ? ((double)ViewBag.TmdbRating).ToString("0.0") : "N/A")</strong> / 10
            </p>

            <div class="mb-4">
                @if (!string.IsNullOrEmpty(Model.Genres))
                {
                    @foreach (var gen in Model.Genres.Split('|'))
                    {
                        <span class="badge bg-secondary me-1 fs-6 px-3 py-2">@gen</span>
                    }
                }
            </div>

            <h4 class="fw-bold">Sinopsis</h4>
            <p class="lead" style="font-size: 1.1rem; line-height: 1.6;">
                @ViewBag.Overview
            </p>

            <hr class="my-4" />

            <div class="card border-0 bg-light shadow-sm">
                <div class="card-body p-4">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <div class="row align-items-center">
                            <div class="col-md-6 mb-3 mb-md-0 d-flex gap-2">
                                <form asp-controller="Movies" asp-action="MarkAsWatched" method="post">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-success px-4 py-2"><i class="bi bi-check2-circle"></i> Văzut</button>
                                </form>

                                <form asp-controller="Movies" asp-action="AddToWatchlist" method="post">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <button type="submit" class="btn btn-outline-primary px-4 py-2"><i class="bi bi-bookmark-plus"></i> Watchlist</button>
                                </form>
                            </div>

                            <div class="col-md-6 border-start text-center text-md-start">
                                <h6 class="mb-1 text-muted">Evaluează acest film:</h6>
                                <form asp-controller="Movies" asp-action="SaveRating" method="post" class="d-flex align-items-center justify-content-center justify-content-md-start">
                                    <input type="hidden" name="movieId" value="@Model.Id" />
                                    <div class="star-rating me-3">
                                        <input type="radio" id="star5" name="rating" value="5" /><label for="star5" title="5 stele - Capodoperă">★</label>
                                        <input type="radio" id="star4" name="rating" value="4" /><label for="star4" title="4 stele - Foarte bun">★</label>
                                        <input type="radio" id="star3" name="rating" value="3" /><label for="star3" title="3 stele - Bun">★</label>
                                        <input type="radio" id="star2" name="rating" value="2" /><label for="star2" title="2 stele - Slab">★</label>
                                        <input type="radio" id="star1" name="rating" value="1" /><label for="star1" title="1 stea - Oribil">★</label>
                                    </div>
                                    <button type="submit" class="btn btn-sm btn-warning fw-bold">Trimite Nota</button>
                                </form>
                            </div>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-2">
                            <h5 class="text-muted mb-3"><i class="bi bi-lock"></i> Autentifică-te pentru a salva filme și a acorda note.</h5>
                            <a asp-controller="Account" asp-action="Login" class="btn btn-primary px-5">Intră în cont</a>
                        </div>
                    }
                </div>
            </div>

        </div>
    </div>
</div>