@model Licenta_Movie_Recommender.Models.CustomList

@{
    ViewData["Title"] = Model.Name;
}

<div class="bg-light p-4 rounded shadow-sm mb-4 border d-flex justify-content-between align-items-start flex-wrap gap-3">
    @* DETALII LISTA *@
    <div>
        <h2 class="text-primary fw-bold mb-2">@Model.Name</h2>
        @if (!string.IsNullOrEmpty(Model.Description))
        {
            <p class="text-muted mb-0">@Model.Description</p>
        }
        <div class="mt-3 small text-secondary">
            <i class="bi bi-calendar3"></i> Creată pe: @Model.CreatedAt.ToString("dd MMM yyyy") |
            <i class="bi bi-film"></i> @Model.Movies.Count filme
        </div>
    </div>

    @* BUTON STERGERE *@
    <form asp-controller="Movies" asp-action="DeleteCustomList" method="post" class="m-0" onsubmit="return confirm('Sigur vrei să ștergi complet această listă?');">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-danger btn-sm shadow-sm"><i class="bi bi-trash"></i> Șterge Lista</button>
    </form>
</div>

    @if (!Model.Movies.Any())
    {
        <div class="alert alert-warning text-center shadow-sm py-5">
            <i class="bi bi-camera-reels fs-1 d-block mb-3 text-secondary"></i>
            <h5 class="fw-bold">Această listă este goală.</h5>
            <p class="text-muted">Poți adăuga filme navigând în catalog și apăsând pe butonul "Adaugă în listă" de pe pagina oricărui film.</p>
            <a asp-action="Index" class="btn btn-primary mt-2 shadow-sm"><i class="bi bi-search"></i> Mergi la Catalog Filme</a>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var item in Model.Movies.OrderByDescending(m => m.AddedAt))
            {
                <div class="col-md-3 mb-4">
                    <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.MovieId" class="text-decoration-none text-dark">
                        <div class="card h-100 shadow-sm border-0 movie-card position-relative">
                            <img src="@item.Movie.PosterUrl" class="card-img-top" alt="@item.Movie.Title" onerror="this.src='https://placehold.co/300x450?text=Fara+Imagine'">
                            <div class="card-body">
                                <h6 class="card-title fw-bold">@item.Movie.Title</h6>
                                <p class="card-text text-muted small">Adăugat: @item.AddedAt.ToString("dd MMM")</p>
                            </div>
                        </div>
                    </a>
                </div>
            }
        </div>
    }

    <div class="mt-4">
        <a asp-action="MyProfile" class="btn btn-outline-secondary btn-sm">&laquo; Înapoi la Profil</a>
    </div>
</div>