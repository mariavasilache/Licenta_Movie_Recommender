@model List<Licenta_Movie_Recommender.Models.Movie>

@{
    ViewData["Title"] = "Recomandări pentru tine";
    var userActivities = ViewBag.UserActivities as List<Licenta_Movie_Recommender.Models.UserMovieActivity>
                         ?? new List<Licenta_Movie_Recommender.Models.UserMovieActivity>();
}

<div class="container mt-4 mb-5">
    <partial name="_PageHeader" model='"Recomandări Personalizate"' />

    @if (Model == null || !Model.Any())
    {
        <div class="alert bg-transparent border border-secondary shadow-sm py-5 text-center rounded-3">
            <i class="bi bi-info-circle display-4 d-block mb-3 text-secondary opacity-50"></i>
            <h4 class="fw-bold text-light">Avem nevoie de mai multe date!</h4>
            <p class="mb-0 text-muted">Algoritmul nostru inteligent are nevoie să evaluezi (cu note de la 1 la 5) <strong>cel puțin 5 filme</strong> pentru a-ți putea crea un profil precis de preferințe.</p>
            <a asp-controller="Movies" asp-action="Index" class="btn btn-danger mt-4 px-4 shadow-sm fw-bold"><i class="bi bi-film me-2"></i> Explorează Catalogul</a>
        </div>
    }
    else
    {
        <div class="alert bg-dark border border-success shadow-sm mb-4 rounded-3 d-flex align-items-center p-3">
            <i class="bi bi-check-circle-fill text-success fs-3 me-3"></i>
            <div class="text-light">
                <strong class="text-success">Sistem Hibrid Activ:</strong> Aceste recomandări sunt calculate matematic pe baza filmelor pe care le-ai apreciat și a genurilor tale preferate.
            </div>
        </div>

        <div class="row">
            @foreach (var movie in Model)
            {
                var activity = userActivities.FirstOrDefault(a => a.MovieId == movie.Id);
                var inWatchlist = activity != null && activity.Status == 1;
                var isWatched = activity != null && activity.Status == 2;

                <div class="col-lg-2 col-md-3 col-sm-4 col-6 mb-5 position-relative movie-container">

                    <span class="position-absolute badge bg-danger shadow-sm" style="top: 8px; left: 20px; z-index: 5; pointer-events: none; font-size: 0.65rem;">
                        <i class="bi bi-heart-fill"></i> Pentru tine
                    </span>

                    <partial name="_MovieCard" model="movie" view-data='new ViewDataDictionary(ViewData) { { "InWatchlist", inWatchlist }, { "IsWatched", isWatched } }' />

                    <div class="px-1 mt-2">
                        <button type="button"
                                class="btn btn-sm btn-outline-secondary w-100 btn-ignore-rec"
                                data-movie-id="@movie.Id"
                                style="font-size: 0.65rem; border-color: rgba(255,255,255,0.1); opacity: 0.7;">
                            <i class="bi bi-eye-slash"></i> Nu mă interesează
                        </button>
                    </div>
                </div>
            }
        </div>
    }
</div>